generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int      @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String   @unique
  password           String
  profilePictureLink String?
  role               UserRole @default(USER)
}

model Image {
  id   Int     @id @default(autoincrement())
  name String
  url  String?
}

enum UserRole {
  ADMIN
  USER
}

model Video {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  url         String
}
